/* USER CODE BEGIN Header */
/**
  ******************************************************************************
  * @file           : main.c
  * @brief          : APP @0x08010000, USART2 (PA2/PA3) <-> ESP32
  *                  CMD: PING->PONG, HELLO->HI, ENTER_BL->set magic + reset
  ******************************************************************************
  */
/* USER CODE END Header */
#include "main.h"
#include <stdio.h>
#include <string.h>

/* Private variables ---------------------------------------------------------*/
UART_HandleTypeDef huart2;

/* ===== Magic flag in RAM (NOINIT) ===== */
__attribute__((section(".noinit"))) volatile uint32_t boot_magic;
#define BOOT_MAGIC 0xB00710AD

/* RX state */
static uint8_t  rxByte;
static char     rxLine[128];
static uint16_t rxIdx = 0;

static void startRx(void);

/* Redirect printf -> USART2 */
int __io_putchar(int ch)
{
  HAL_UART_Transmit(&huart2, (uint8_t*)&ch, 1, 100);
  return ch;
}

static void startRx(void)
{
  HAL_UART_Receive_IT(&huart2, &rxByte, 1);
}

/* Called by HAL_UART_IRQHandler() when 1 byte received */
void HAL_UART_RxCpltCallback(UART_HandleTypeDef *huart)
{
  if (huart->Instance != USART2) return;

  char c = (char)rxByte;

  if (c == '\n' || c == '\r')
  {
    if (rxIdx > 0)
    {
      rxLine[rxIdx] = 0;

      printf("RX: %s\r\n", rxLine);

      if (strcmp(rxLine, "PING") == 0)
      {
        printf("PONG\r\n");
      }
      else if (strcmp(rxLine, "HELLO") == 0)
      {
        printf("HI FROM STM32\r\n");
      }
      else if (strcmp(rxLine, "ENTER_BL") == 0)
      {
        printf("OK: ENTER_BL\r\n");

        boot_magic = BOOT_MAGIC;
        HAL_Delay(10);
        NVIC_SystemReset();   // reset -> bootloader will see boot_magic
      }
      else
      {
        printf("UNKNOWN: %s\r\n", rxLine);
      }

      rxIdx = 0;
    }
  }
  else
  {
    if (rxIdx < (sizeof(rxLine) - 1)) rxLine[rxIdx++] = c;
    else
    {
      rxIdx = 0;
      printf("ERR: cmd too long\r\n");
    }
  }

  startRx();
}

/* Prototypes from CubeMX */
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_USART2_UART_Init(void);

int main(void)
{
  HAL_Init();
  SystemClock_Config();

  MX_GPIO_Init();
  MX_USART2_UART_Init();

  printf("BOOT: APP ready @0x08010000\r\n");
  startRx();

  while (1)
  {
    HAL_Delay(1000);
  }
}

/* ===== SystemClock_Config: boleh pakai hasil CubeMX kamu ===== */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  __HAL_RCC_PWR_CLK_ENABLE();
  __HAL_PWR_VOLTAGESCALING_CONFIG(PWR_REGULATOR_VOLTAGE_SCALE1);

  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSI;
  RCC_OscInitStruct.HSIState = RCC_HSI_ON;
  RCC_OscInitStruct.HSICalibrationValue = RCC_HSICALIBRATION_DEFAULT;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_NONE;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK) Error_Handler();

  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_HSI;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV1;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_HCLK_DIV1;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_0) != HAL_OK) Error_Handler();
}

/* USART2 init 115200 8N1 */
static void MX_USART2_UART_Init(void)
{
  huart2.Instance = USART2;
  huart2.Init.BaudRate = 115200;
  huart2.Init.WordLength = UART_WORDLENGTH_8B;
  huart2.Init.StopBits = UART_STOPBITS_1;
  huart2.Init.Parity = UART_PARITY_NONE;
  huart2.Init.Mode = UART_MODE_TX_RX;
  huart2.Init.HwFlowCtl = UART_HWCONTROL_NONE;
  huart2.Init.OverSampling = UART_OVERSAMPLING_16;

  if (HAL_UART_Init(&huart2) != HAL_OK) Error_Handler();
}

static void MX_GPIO_Init(void)
{
  __HAL_RCC_GPIOA_CLK_ENABLE();
}

void Error_Handler(void)
{
  __disable_irq();
  while (1) {}
}
